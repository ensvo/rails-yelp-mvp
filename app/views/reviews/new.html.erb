<div class="container">
	<h1>Add a review</h1>
	<%= simple_form_for [@restaurant, @review] do |f| %>
		<%= f.input :content %>
		<%= f.input :rating %>
		<%= f.submit class: 'btn btn-primary' %>
		<p><%= link_to 'Back', restaurant_path(@restaurant), class: 'btn btn-light mt-2' %></p>
	<% end %>
</div>