<div class="container">
	<h1><%= @restaurant.name %></h1>
	<p><em><%= @restaurant.category.capitalize %></em></p>
	<p><strong>Located at:</strong> <%= @restaurant.address %></p>
	<p><strong>Contact:</strong> <%= @restaurant.phone_number %></p>

	<strong>Reviews:</strong>
	<ul>
		<% if @restaurant.reviews.any? %>
			<% @restaurant.reviews.each do |review| %>
				<li>
					<%= review.content %>
					<%= "⭐" * review.rating %>
				</li>
			<% end %>
		<% else %>
			<p>No reviews yet.</p>
		<% end %>
	</ul>

<h2>Add a review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
	<%= f.input :content %>
	<%= f.input :rating %>
	<%= f.submit class: 'btn btn-primary' %>
<% end %>

	<p><%= link_to 'Back', restaurants_path, class: 'btn btn-light mt-2' %></p>
</div>