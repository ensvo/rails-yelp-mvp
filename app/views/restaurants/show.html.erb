<div class="container">
	<h2><%= @restaurant.name %></h2>
	<p><em><%= @restaurant.category.capitalize %></em></p>
	<p><strong>Located at:</strong> <%= @restaurant.address %></p>
	<p><strong>Contact:</strong> <%= @restaurant.phone_number %></p>

	<strong>Reviews:</strong>
	<ul>
		<% if @restaurant.reviews.any? %>
			<% @restaurant.reviews.each do |review| %>
				<li>
					<%= review.content %>
					<%= "⭐" * review.rating %>
				</li>
			<% end %>
		<% else %>
			<p>No reviews yet.</p>
		<% end %>
	</ul>
	<p><%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %></p>

	<p><%= link_to 'Back', restaurants_path, class: 'btn btn-light' %></p>
</div>